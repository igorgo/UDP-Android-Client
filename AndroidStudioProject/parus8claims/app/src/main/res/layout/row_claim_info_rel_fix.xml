<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fciReleaseToContainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ua.parus.pmo.parus8claims.gui.TextView
        android:id="@+id/fciReleaseToLabel"
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/claim_release_build" />

    <ua.parus.pmo.parus8claims.gui.TextView
        android:id="@+id/fciReleaseToText"
        style="@style/release_fixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/min_designer_width" />
</LinearLayout>