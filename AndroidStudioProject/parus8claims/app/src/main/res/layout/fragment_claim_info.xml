<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/fciTypeText"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignBottom="@+id/fciTypeImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minWidth="30dp" />

    <ImageView
        android:contentDescription="@string/claim_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fciTypeImage"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fciTypeText"
        android:layout_toStartOf="@+id/fciTypeText" />
    <TextView
        android:text="@string/claim_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fciTypeImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fciNumberLabel"
        style="@style/label"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/fciNumberText"
        android:minWidth="30dp"
        android:layout_alignBottom="@id/fciTypeImage"
        android:layout_toRightOf="@+id/fciNumberLabel"
        android:layout_toEndOf="@+id/fciNumberLabel"
        android:layout_toLeftOf="@+id/fciTypeLabel"
        android:layout_toStartOf="@+id/fciTypeLabel" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/claim_type"
        android:id="@+id/fciTypeLabel"
        android:layout_alignBottom="@+id/fciTypeImage"
        android:layout_toLeftOf="@+id/fciTypeImage"
        android:layout_toStartOf="@+id/fciTypeImage"
        style="@style/label" />
</RelativeLayout>

    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/claim_initiator"
        android:id="@+id/fciInitiatorLabel"
        android:layout_below="@+id/fciReleaseFromText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/ClaimLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:minWidth="30dp"
        android:id="@+id/fciInitiatorText"
        android:layout_below="@+id/fciReleaseFromText"
        android:layout_toRightOf="@+id/fciInitiatorLabel"
        android:layout_toEndOf="@+id/fciInitiatorLabel"
        android:layout_alignRight="@+id/fciTypeLabel"
        android:layout_alignEnd="@+id/fciTypeLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/fciRegDateText"
        android:minWidth="30dp"
        android:layout_below="@+id/fciReleaseFromText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/claim_date_reg"
        android:id="@+id/fciRegDateLabel"
        android:layout_below="@+id/fciReleaseFromText"
        android:layout_toLeftOf="@+id/fciRegDateText"
        android:layout_toStartOf="@+id/fciRegDateText"
        style="@style/ClaimLabel" /-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_application"
            android:id="@+id/fciApplicationLabel"
            style="@style/label"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:minWidth="30dp"
            android:id="@+id/fciApplicationText"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_unit"
            android:id="@+id/fciUnitLabel"
            style="@style/label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:minWidth="30dp"
            android:id="@+id/fciUnitText" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fciUnitFuncContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_unitfunc"
            android:id="@+id/fciUnitFuncLabel"
            style="@style/label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:minWidth="30dp"
            android:id="@+id/fciUnitFuncText" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_release_build"
            android:id="@+id/fciReleaseFromLabel"
            style="@style/label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:minWidth="30dp"
            android:id="@+id/fciReleaseFromText"
            style="@style/release_found" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_state"
            android:id="@+id/fciStatusLabel"
            style="@style/label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:minWidth="30dp"
            android:id="@+id/fciStatusText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/fciStatusLabel"
            android:layout_toEndOf="@+id/fciStatusLabel"
            android:layout_toLeftOf="@+id/fciChangeDateLabel"
            android:layout_toStartOf="@+id/fciChangeDateLabel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_date_change"
            android:id="@+id/fciChangeDateLabel"
            style="@style/label"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/fciChangeDateText"
            android:layout_toStartOf="@+id/fciChangeDateText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/fciChangeDateText"
            android:minWidth="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fciExecutorContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_executor"
            android:id="@+id/fciExecutorLabel"
            style="@style/label" />

        <ImageView
            android:contentDescription="@string/exec_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fciExecutorImage"
            android:minWidth="20dp"
            android:minHeight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:minWidth="30dp"
            android:id="@+id/fciExecutorText"/>

    </LinearLayout>

    <!--TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/fciDescription"
        android:layout_below="@+id/fciInitiatorText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/nonauthor_buble" /-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_priority"
            android:id="@+id/fciPriorityLabel"
            style="@style/label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/fciPriorityText"
            android:minWidth="30dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/priority_background"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fciReleaseToContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/claim_release_build"
            android:id="@+id/fciReleaseToLabel"
            style="@style/label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:minWidth="30dp"
            android:id="@+id/fciReleaseToText"
            style="@style/release_fixed"/>
    </LinearLayout>

</LinearLayout>
